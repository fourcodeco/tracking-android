<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/title_fuel_cost">

        <EditTextPreference
            app:key="pref_fuel_efficiency"
            app:title="@string/title_fuel_efficiency"
            app:defaultValue="25"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="pref_fuel_price"
            app:title="@string/title_fuel_price"
            app:defaultValue="50"
            app:useSimpleSummaryProvider="true"/>

        <!-- Convert to list -->
        <EditTextPreference
            app:key="pref_currency"
            app:title="@string/title_currency"
            app:defaultValue="PHP"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/title_navigation">

        <SwitchPreferenceCompat
            app:key="pref_should_simulate"
            app:title="@string/title_simulate"
            app:summary="Simulate route (for debugging purposes only)."
            app:defaultValue="false"/>

    </PreferenceCategory>


</androidx.preference.PreferenceScreen>