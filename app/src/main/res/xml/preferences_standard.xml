<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="Fuel Cost Computation">

        <EditTextPreference
            app:key="pref_fuel_efficiency"
            app:title="@string/title_fuel_efficiency"
            app:defaultValue="25"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="pref_fuel_price"
            app:title="@string/title_fuel_price"
            app:defaultValue="50"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="pref_currency"
            app:title="@string/title_currency"
            app:defaultValue="50"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>


</androidx.preference.PreferenceScreen>